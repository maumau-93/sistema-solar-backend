{
  "name": "sistemasolar",
  "version": "1.0.0",
  "description": "Study case project for Mercado Libre backend engineer position",
  "main": "app.js",
  "scripts": {
    "build": "rimraf ./build && tsc",
    "lint": "eslint . --ext .ts",
    "lint-fix": "eslint . --ext .ts --fix",
    "prettier-format": "prettier --config .prettierrc 'src/**/*.ts' --write",
    "prettier-watch": "onchange 'src/**/*.ts' -- prettier --write {{changed}}",
    "start": "npm run build && NODE_ENV=production node build/index.js",
    "start:dev": "nodemon",
    "test": "jest --coverage",
    "test:watch": "jest --coverage --watchAll",
    "tsc": "tsc"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/maumau-93/sistema-solar-backend.git"
  },
  "author": "Mauricio Giraldo Acosta",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/maumau-93/sistema-solar-backend/issues"
  },
  "homepage": "https://github.com/maumau-93/sistema-solar-backend#readme",
  "husky": {
    "hooks": {
      "pre-commit": "npm run prettier-format && npm run lint"
    }
  },
  "devDependencies": {
    "@types/agenda": "^2.0.9",
    "@types/express": "^4.17.7",
    "@types/jest": "^26.0.9",
    "@types/mongoose": "^5.7.36",
    "@types/node": "^14.0.27",
    "@types/redis": "^2.8.25",
    "@typescript-eslint/eslint-plugin": "^3.8.0",
    "@typescript-eslint/parser": "^3.8.0",
    "eslint": "^7.6.0",
    "eslint-config-node": "^4.1.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-jest": "^23.20.0",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.2.5",
    "jest": "^26.2.2",
    "nodemon": "^2.0.4",
    "onchange": "^7.0.2",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.1.4",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.7"
  },
  "dependencies": {
    "agenda": "^3.1.0",
    "body-parser": "^1.19.0",
    "custom-env": "^2.0.1",
    "express": "^4.17.1",
    "helmet": "^4.0.0",
    "install": "^0.13.0",
    "jsonschema": "^1.2.6",
    "mongodb": "^3.6.0",
    "mongoose": "^5.9.27",
    "npm": "^6.14.7",
    "redis": "^3.0.2",
    "typedi": "^0.8.0",
    "winston": "^3.3.3"
  }
}
